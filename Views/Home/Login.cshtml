@model RINTE_Care.Models.UserCredential

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Info!=null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Info
                </div>
            }
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RememberMe" class="checkbox" />
                <label asp-for="RememberMe" class="control-label"> </label>
            </div>
            <div class="form-group">
                <input asp-action="Login" type="submit" value="Login" class="btn btn-primary" />
                <input asp-action="Reset" type="submit" value="Reset" class="btn btn-primary" />
            </div>
            <text style="color:red">@ViewBag.Error</text>
        </form>
    </div>
</div>







