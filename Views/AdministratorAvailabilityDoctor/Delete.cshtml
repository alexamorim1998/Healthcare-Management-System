@model RINTE_Care.Models.DoctorAvailabilityView

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DoctorAvailabilityView</h4>
    <hr />
    <form asp-action="Delete">
        <dl class="row">
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.idDoctor)
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DoctorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DoctorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WeekDay)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WeekDay)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SlotInformation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SlotInformation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DayStart)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DayStart)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DayEnd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DayEnd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.active)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.active)
            </dd>
        </dl>


        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
