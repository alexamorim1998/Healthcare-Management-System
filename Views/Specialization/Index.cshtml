@model IEnumerable<RINTE_Care.Models.Specialization>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @Html.HiddenFor(modelItem => item.idSpecialization)
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idSpecialization }) |
                @Html.ActionLink("Details", "Details", new { id = item.idSpecialization }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idSpecialization })
            </td>
        </tr>
}
    </tbody>
</table>
